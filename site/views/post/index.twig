{% extends 'layout.twig' %}

{% block content %}
    {{ parent() }}
    <h1>Blog</h1>
    {% for post in posts %}
        <h2>
            <a href="{{ path('post_show', {id: post.id}) }}">
                {{ post.heading }}
            </a>
        </h2>
        <p>{{ post.created_at|date('m/d/Y') }}</p>
        <p>{{ post.content }}</p>
    {% endfor %}
{% endblock %}
